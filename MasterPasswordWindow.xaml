<Window x:Class="PWEngine.MasterPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Master Password" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Enter Master Password:" Margin="10"/>

        <PasswordBox x:Name="MasterPasswordBox" Grid.Row="1" Margin="10"/>

        <Button Content="Confirm" Grid.Row="2" HorizontalAlignment="Right" Margin="10"
                Click="ConfirmButton_Click"/>
    </Grid>
</Window>